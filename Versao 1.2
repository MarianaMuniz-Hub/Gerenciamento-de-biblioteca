#include <bits/stdc++.h>

using namespace std;

 struct usuario{
    string nome;
    int id;
};
    
    struct Livro{
    string titulo;
    string autor;
    int idLivro;
    int qtdDisponivel;
    
};

void cadastrarLivro(Livro todosOsLivros[],int i){
    cin.ignore();
    cout << "Cadastre o " << i + 1 << " livro: " << endl;
    cout << "\nTítulo: ";
    getline(cin,todosOsLivros[i].titulo);
    
    cout << "Autor: ";
    getline(cin,todosOsLivros[i].autor);
    
    cout << "Id livro: ";
    cin >> todosOsLivros[i].idLivro;
    cin.ignore();
    
    cout << "Quantidade disponivel: ";
    cin >> todosOsLivros[i].qtdDisponivel;
    cin.ignore();
    
} 
    
int main(){
    int qtd_usuario,i = 0;
    int opcao;
    const int TAM = 100;
    usuario usuario[TAM];
    Livro todosOsLivros[TAM];

   
   
    do{
        cout << "-------------- BIBLIOTECA ------------" << endl;
        cout << "|1 - Cadastrar Usuario               |" << endl;
        cout << "|2 - Cadastrar Livro                 |" << endl;
        cout << "|3 - Consultar livros disponiveis    |" << endl;
        cout << "|4 - Emprestar livro                 |" << endl;
        cout << "|5 - Devolver livro                  |" << endl;
        cout << "|6 - Historico de emprestimo         |" << endl;
        cout << "|7 - Sair                            |" << endl;
        cout << "--------------------------------------" << endl;
        cout << "\nEscolha a opção: ";
        cin >> opcao;
        
        cout <<'\n';
        
        if(opcao == 1 ){
            if(qtd_usuario < TAM){
                cin.ignore();
                cout << "Nome: ";
                getline(cin, usuario[qtd_usuario].nome);
                cout << "Id unico: ";
                cin >> usuario[qtd_usuario].id;
                cin.ignore();
                cout <<'\n';
               
           }
        }
        
        if(opcao == 2){
            cadastrarLivro(todosOsLivros,i);
        }
           
        if(opcao == 7){
            cout <<"\nEncerrando programa..." << endl;
            break;
        }  
         
       
       
       
       
    } while (opcao != 7);

    return 0;
}
